<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if books.present? %>
      <% books.each do |book| %>
        <tr>
          <td><%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <td><%= link_to book.title,book %></td>
          <td><%= book.body %></td>
          <td><% if book.favorited?(current_user, book) %>
            <%= link_to book_favorites_path(book.id), method: :delete do %>
                <span style="color:red;">♥<%= book.favorites.size%>︎</span>
            <% end %>
          <% else %>
            <%= link_to book_favorites_path(book.id), method: :post do %>
                <span style="color:blue;">♡<%= book.favorites.size%>︎</span>
            <% end %>
          <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>